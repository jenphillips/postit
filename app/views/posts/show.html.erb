<p class="pull-right">
	<%= link_to "edit this post", edit_post_path(@post) %>
</p>
<p>
	<%= render @post.categories %>
</p>

<%= render "shared/content_title", title: @post.title %>
<p><%= @post.description %></p>
<p><%= @post.user.username %></p>
<h5>Comments:</h5>
<% @post.comments.each do |c| %>
  <p><%= c.user.username %> says:</p>
  <p><%= c.body %></p>
<% end %>